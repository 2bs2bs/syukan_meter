<% content_for(:title, t('.title')) %>

<div class="container mx-auto mt-8 p-8 bg-white max-w-md rounded-lg shadow-md">

  <h1 class="text-2xl font-semibold text-center mb-6"><%= t('.title') %></h1>
  <%= form_with url: password_resets_path do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2 text-center" %>
      <%= f.text_field :email, class: "w-full px-3 py-2 leading-tight border rounded-md focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-6">
      <%= f.submit t('.send'), class: "w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-4 px-2 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>