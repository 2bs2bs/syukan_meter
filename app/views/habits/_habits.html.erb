<div id="<%= habits == @current_habits ? 'current-habits' : 'past-habits' %>" class="habits-container">
  <% if habits.present? %>
    <% habits.each do |habit| %>
      <%= render 'habit', habit: habit %>
    <% end %>
  <% else %>
    <div class="bg-white rounded-lg p-4 mt-4 shadow-md flex items-center justify-center">
      <p class="text-gray-500"><%= empty_message %></p>
    </div>
  <% end %>
</div>
