<div class="h-max flex-1 container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-semibold mb-6">This is Homepage</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
    <!-- Timer Link -->
    <div class="bg-blue-500 text-black p-6 rounded-lg shadow-md lg:flex lg:flex-col">
      <%= link_to 'Timer', pomodoros_path, class: "block text-lg font-semibold mb-2 hover:underline" %>
      <p class="text-sm">Manage your time effectively with the timer.</p>
    </div>

    <!-- Habit Link -->
    <div class="bg-green-500 text-black p-6 rounded-lg shadow-md lg:flex lg:flex-col">
      <%= link_to 'Habit', habits_path, class: "block text-lg font-semibold mb-2 hover:underline" %>
      <p class="text-sm">Develop and track your habits for a better lifestyle.</p>
    </div>

    <!-- Post Link -->
    <div class="bg-orange-500 text-black p-6 rounded-lg shadow-md lg:flex lg:flex-col">
      <%= link_to 'Post', posts_path, class: "block text-lg font-semibold mb-2 hover:underline" %>
      <p class="text-sm">Share your thoughts and experiences with others.</p>
    </div>

    <!-- Calendar Link -->
    <div class="bg-purple-500 text-black p-6 rounded-lg shadow-md lg:flex lg:flex-col">
      <%= link_to 'Calendar', calendars_path, class: "block text-lg font-semibold mb-2 hover:underline" %>
      <p class="text-sm">Keep track of your events and schedule.</p>
    </div>
  </div>
</div>
